<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ConstructorsStandingsFragment">

    <TextView
        android:id="@+id/constructors_standing_page_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        android:text="2024 Constructors Standing"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/constructors_standing_page_header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/constructors_standing_page_heading"
        android:gravity="center">

    <TextView
        android:id="@+id/constructors_standing_page_header_row_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="POS"
        android:textSize="22sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_textview"
        android:padding="5dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/constructors_standing_page_header_row_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="Team"
        android:textSize="22sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_textview"
        android:padding="5dp"
        android:textColor="@color/black"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/constructors_standing_page_header_row_pts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PTS"
        android:background="@drawable/rounded_textview"
        android:padding="5dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold|italic"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/constructors_standing_page_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/constructors_standing_page_header_row"
        android:scrollbars="none"/>

</androidx.constraintlayout.widget.ConstraintLayout>