<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/f1_logo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/f1_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/email_field_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textStyle="bold"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/red"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/f1_logo_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="10dp"
        android:background="@drawable/custom_field_underline_transparent" />

    <EditText
        android:id="@+id/password_field_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:textColorHint="@color/red"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/email_field_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="10dp"
        android:background="@drawable/custom_field_underline_transparent" />

    <TextView
        android:id="@+id/not_a_member_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member?"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/password_field_login"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp" />

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/black"
        android:backgroundTint="@color/red"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/not_a_member_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
