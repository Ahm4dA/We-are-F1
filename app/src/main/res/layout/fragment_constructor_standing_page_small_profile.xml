<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ConstructorStandingPageSmallProfileFragment">

    <ImageView
        android:id="@+id/constructor_standing_page_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/constructor_standing_page_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constructor_standing_page_pic" />

    <TextView
        android:id="@+id/constructor_standing_page_team_principal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team Principal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/constructor_standing_page_team_principal_value"
        app:layout_constraintTop_toBottomOf="@id/constructor_standing_page_team_name"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/constructor_standing_page_team_principal_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@id/constructor_standing_page_team_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constructor_standing_page_team_principal" />

    <!-- Wins -->
    <TextView
        android:id="@+id/constructor_standing_page_team_wins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wins"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/constructor_standing_page_team_wins_value"
        app:layout_constraintTop_toBottomOf="@id/constructor_standing_page_team_principal"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/constructor_standing_page_team_wins_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@id/constructor_standing_page_team_wins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constructor_standing_page_team_wins" />

    <!-- Drivers -->
    <TextView
        android:id="@+id/constructor_standing_page_team_drivers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Drivers"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/constructor_standing_page_team_drivers_value"
        app:layout_constraintTop_toBottomOf="@id/constructor_standing_page_team_wins"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <TextView
        android:id="@+id/constructor_standing_page_team_drivers_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@id/constructor_standing_page_team_drivers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constructor_standing_page_team_drivers" />

</androidx.constraintlayout.widget.ConstraintLayout>