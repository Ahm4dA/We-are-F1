<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/constructor_standing_page_row_pos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:textColor="@color/gold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/constructor_standing_page_row_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:textColor="@color/gold"
            android:textStyle="bold|italic"
            android:gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/constructor_standing_page_row_pts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:textColor="@color/gold"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/constructor_standing_small_profile_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
